<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로또번호생성기"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main_linear_layout"/>
    <LinearLayout
        android:id="@+id/main_linear_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/lotto_iv_01"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ball_00"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/lotto_iv_02"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ball_00"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/lotto_iv_03"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ball_00"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/lotto_iv_04"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ball_00"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/lotto_iv_05"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ball_00"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/lotto_iv_06"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ball_00"
                android:layout_weight="1"/>
        </LinearLayout>
        <TextView
            android:id="@+id/lotto_res_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="분석 결과"
            android:gravity="center"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/lotto_winning_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="당첨 결과"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    </LinearLayout>
    <Button
        android:id="@+id/lotto_btn"
        android:text="번호 생성"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_linear_layout"
        android:layout_marginTop="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>