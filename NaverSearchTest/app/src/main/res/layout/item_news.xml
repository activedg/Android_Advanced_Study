<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="news"
            type="com.example.naversearchtest.domain.entity.NewsItem" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/tv_news_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{news.title}"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/gl_item_news_vertical"
            tools:text="제목제목"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_item_news_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7"/>
        <TextView
            android:id="@+id/tv_news_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="@id/gl_item_news_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_news_item_title"
            tools:text="2022/07/07"/>
        <TextView
            android:id="@+id/tv_news_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="16sp"
            android:text="@{news.description}"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="@id/tv_news_item_title"
            app:layout_constraintTop_toBottomOf="@id/tv_news_item_title"
            tools:text="내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용"/>
        <TextView
            android:id="@+id/tv_news_item_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@{news.link}"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_news_item_description"
            app:layout_constraintStart_toStartOf="@id/tv_news_item_description"
            tools:text="https://www.naver.com"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>